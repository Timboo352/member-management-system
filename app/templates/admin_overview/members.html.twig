{% block body %}
    <div class="content-wrapper overview overview--members">
        <nav class="overview__nav">
            <ul class="overview__nav__list">
                <li class="overview__nav__item overview__nav__item--active">
                    <a href="{{ path("app_admin_overview_members") }}" class="nav-item">Members</a>
                </li>
                <li class="overview__nav__item">
                    <a href="#" class="nav-item">Rollen</a>
                </li>
            </ul>
        </nav>
        <h1 class="mb-4">
            Members
        </h1>
        <a href="{{ path('app_admin_new_member') }}" class="ra-button ra-button--icon ra-button--blurple mb-4">
            <i class="fa-solid fa-user-plus"></i>
        </a>
        {% for member in members %}
            <div {{ react_component('MemberPreview', { 'firstName': member.getFirstname, 'lastName': member.getLastname, 'nickname': member.getNickname, 'roleName': member.status.getTitle, 'roleColor': member.status.getColor, 'path': path("app_admin_detail_member", {'memberId': member.getId}) }) }}>
                {{ member.getNickname }}
            </div>
        {% endfor %}
    </div>
{% endblock %}
