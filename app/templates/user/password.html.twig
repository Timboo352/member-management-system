{% extends 'base.html.twig' %}

{% block title %}Passwort √§ndern{% endblock %}

{% block emoji %}üóùÔ∏èüóù{% endblock %}

{% block body %}
    <div class="content-wrapper profile">
        <form action="#" method="post">
            <div class="profile__head">
                <h1 class="profile__head__title">
                    Passwort √§ndern
                </h1>
            </div>
            <div class="profile__body">
                <div class="row">
                    <div class="col-12 col-lg-6 mb-3" {{ react_component('FormInput', { 'fieldTitle': 'Neues Passwort', 'fieldName':  'password', 'fieldValue': '', 'inputType': 'password', 'required': true}) }}></div>
                    <div class="col-12 col-lg-6 mb-3" {{ react_component('FormInput', { 'fieldTitle': 'Passwort wiederholen', 'fieldName':  'passwordRepeat', 'fieldValue': '', 'inputType': 'password', 'required': true}) }}></div>
                </div>
                {% for error in errors %}
                    <div class="alert alert-danger" role="alert">
                        {{ error }}
                    </div>
                {% endfor %}
            </div>
            <div class="profile__footer">
                <div class="profile__footer__left">
                    <button class="ra-button ra-button--icon ra-button--blurple" type="submit">
                        <i class="fa-solid fa-floppy-disk"></i>
                    </button>
                </div>
                <div class="profile__footer__right">
                    <a href="{{ path('app_profile') }}" class="ra-button ra-button--icon ra-button--red">
                        <i class="fa-solid fa-right-from-bracket"></i>
                    </a>
                </div>
            </div>
        </form>
    </div>
{% endblock %}
