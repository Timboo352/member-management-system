{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="content-wrapper login">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as <a href="{{ path('app_profile') }}">{{ app.user.member.firstname }} {{ app.user.member.lastname }}</a>, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h1 class="mb-4">Login</h1>

            <div class="mb-3" {{ react_component('FormInput', { 'fieldTitle': 'Benutzer ID', 'fieldName':  'member', 'fieldValue': last_username, 'disableLabel': true, 'required': true}) }}></div>
            <div class="mb-3" {{ react_component('FormInput', { 'fieldTitle': 'Passwort', 'fieldName':  'password', 'fieldValue': '', 'disableLabel': true, 'inputType': 'password', 'required': true}) }}></div>
{#            <label for="inputMember">Benutzer ID</label>#}
{#            <input type="number" value="{{ last_username }}" name="member" id="inputMember" class="form-control" autocomplete="username" required autofocus>#}
{#            <label for="inputPassword">Passwort</label>#}
{#            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>#}

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}

            <button class="ra-button ra-button--blurple mt-4" type="submit">
                Sch√∂n ein ine-logge
            </button>
        </form>
    </div>
{% endblock %}
